{% if posts %}
<div id="d_blog_module_related_post_to_product" class="bm-post-module bm-related-post">
	<div class="h2"><span>{{heading_title}}</span></div>
	<div class="row">                             
	    {% for post in posts %}
	        {% include template('extension/d_blog_module/post_thumb') with post %}
	    {% endfor %}
	</div>
</div>
<script>
	$(function(){
		cols = $('#column-right, #column-left').length;
		if (cols == 2) {
			$('#content #d_blog_module_related_post_to_product .post-layout').attr('class', 'post-layout post-grid col-lg-6 col-md-6 col-sm-12 col-xs-12');
		} else if (cols == 1) {
			$('#content #d_blog_module_related_post_to_product .post-layout').attr('class', 'post-layout post-grid col-lg-4 col-md-4 col-sm-6 col-xs-12');
		} else {
			$('#content #d_blog_module_related_post_to_product .post-layout').attr('class', 'post-layout post-grid col-lg-3 col-md-3 col-sm-6 col-xs-12');
		}
		$('#column-right #d_blog_module_related_post_to_product .post-layout, #column-left #d_blog_module_related_post_to_product .post-layout').attr('class', 'post-layout post-grid col-md-12');
	})
</script>
{% endif %}